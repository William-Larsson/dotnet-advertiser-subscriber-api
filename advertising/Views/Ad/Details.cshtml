@model advertising.Models.Ad

@{
    ViewData["Title"] = "Details";
}

<h4>Annonsinformation</h4>

<div>
    <h1>@Html.DisplayFor(model => model.Headline)</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) SEK
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Advertiser)
        </dt>
        <dd class = "col-sm-10">
            @if(!Model.Advertiser.isOrganization)
            {
                <p>@Model.Advertiser.Firstname  @Model.Advertiser.Lastname</p>
            } else {
                 @Html.DisplayFor(model => model.Advertiser.OrganizationName)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Advertiser.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Advertiser.City)
        </dd>
        <dt class = "col-sm-2">
            Säljarinfo
        </dt>
        <dd class = "col-sm-10">
            @if (!Model.Advertiser.isOrganization)
            {
                <p>Prenumerant</p>
            } else {
                <p>Företag</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Redigera</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Ta bort</a> |
    <a asp-action="Index">Tillbaka till annonser</a>
</div>
